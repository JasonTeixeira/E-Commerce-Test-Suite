# ========================================
# E-Commerce Test Suite Configuration
# ========================================

# ========================================
# Application Under Test
# ========================================
BASE_URL=https://www.demoblaze.com
API_BASE_URL=https://api.demoblaze.com

# ========================================
# Test Configuration
# ========================================
# Test environment: dev, staging, production
TEST_ENV=staging

# Browser configuration for UI tests
BROWSER=chromium
HEADLESS=true
BROWSER_WIDTH=1920
BROWSER_HEIGHT=1080

# Parallel execution
PYTEST_WORKERS=8
MAX_WORKERS=10

# Timeouts (in milliseconds)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000
ACTION_TIMEOUT=15000

# ========================================
# Test User Credentials
# ========================================
# Default test users (create these in the app)
TEST_USER_EMAIL=testuser@example.com
TEST_USER_PASSWORD=Test@1234
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=Admin@1234

# ========================================
# API Configuration
# ========================================
API_TIMEOUT=30
API_RETRY_COUNT=3
API_RETRY_DELAY=1

# ========================================
# Performance Testing
# ========================================
# Locust configuration
LOCUST_USERS=100
LOCUST_SPAWN_RATE=10
LOCUST_RUN_TIME=5m

# Performance thresholds
MAX_RESPONSE_TIME_MS=2000
MAX_PAGE_LOAD_TIME_MS=3000
ERROR_RATE_THRESHOLD=0.01

# ========================================
# Visual Regression Testing
# ========================================
VISUAL_DIFF_THRESHOLD=0.05
SCREENSHOT_DIR=reports/screenshots
BASELINE_DIR=ui_tests/visual/baselines

# ========================================
# Security Testing
# ========================================
# OWASP ZAP configuration
ZAP_API_KEY=your-zap-api-key
ZAP_HOST=localhost
ZAP_PORT=8080
SECURITY_SCAN_TIMEOUT=600

# ========================================
# Accessibility Testing
# ========================================
# WCAG compliance level: A, AA, AAA
WCAG_LEVEL=AA
A11Y_RULES_TO_RUN=wcag2a,wcag2aa,wcag21aa

# ========================================
# Database Configuration
# ========================================
# Database connection (if testing with actual DB)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=demoblaze_test
DB_USER=test_user
DB_PASSWORD=test_password

# ========================================
# Reporting Configuration
# ========================================
# Report directories
REPORT_DIR=reports
HTML_REPORT_DIR=reports/html
ALLURE_RESULTS_DIR=reports/allure-results
COVERAGE_DIR=reports/coverage

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ========================================
# CI/CD Configuration
# ========================================
# CI environment detection
CI=false
GITHUB_ACTIONS=false

# Slack/Email notifications
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS_ENABLED=false
EMAIL_RECIPIENTS=

# ========================================
# Feature Flags
# ========================================
# Enable/disable test suites
RUN_UI_TESTS=true
RUN_API_TESTS=true
RUN_PERFORMANCE_TESTS=true
RUN_SECURITY_TESTS=true
RUN_ACCESSIBILITY_TESTS=true
RUN_VISUAL_TESTS=true
RUN_INTEGRATION_TESTS=true

# Screenshot/video capture
CAPTURE_SCREENSHOTS=true
CAPTURE_VIDEOS=false
VIDEO_ON_FAILURE_ONLY=true

# ========================================
# External Services
# ========================================
# BrowserStack/Sauce Labs (if using cloud testing)
BROWSERSTACK_USERNAME=
BROWSERSTACK_ACCESS_KEY=
SAUCE_USERNAME=
SAUCE_ACCESS_KEY=

# ========================================
# Advanced Configuration
# ========================================
# Retry failed tests
PYTEST_RERUN_FAILURES=2

# Test data
TEST_DATA_DIR=tests/data
FAKER_LOCALE=en_US

# Mock services
ENABLE_MOCKS=false
MOCK_SERVER_URL=http://localhost:8081
